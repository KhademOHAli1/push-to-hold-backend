# Push to Hold Backend - Environment Variables
# Copy this file to .env and adjust values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://pushtohold:pushtohold_secret@localhost:5432/pushtohold"

# ===========================================
# REDIS CACHE (optional - falls back to memory)
# ===========================================
REDIS_URL="redis://localhost:6379"

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET="change-this-to-a-random-64-char-string-in-production"
JWT_EXPIRES_IN="7d"

# ===========================================
# SERVER
# ===========================================
PORT=4000
NODE_ENV="development"

# ===========================================
# CORS
# ===========================================
FRONTEND_URL="http://localhost:3000"
