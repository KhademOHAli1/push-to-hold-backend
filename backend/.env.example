# Push to Hold Backend - Environment Variables Template
# Copy this file to .env and adjust values as needed

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pushtohold"

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET="__REPLACE_WITH_openssl_rand_hex_64_PER_ENV__"
JWT_EXPIRES_IN="7d"
BETTERAUTH_JWKS_URL=""
BETTERAUTH_ISSUER=""
BETTERAUTH_AUDIENCE=""

# ===========================================
# SERVER
# ===========================================
PORT=4000
NODE_ENV="development"

# ===========================================
# FRONTEND URLs (for CORS)
# ===========================================
FRONTEND_URL="http://localhost:3000"

